<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="compose" action="/compose" method="post">
    <div class="mb-3">
        <label for="postTitle" class="form-label">Title</label>
        <input type="text" class="form-control" name="postTitle" id="postTitle" >
    </div>
    <div class="mb-3">
        <label for="postText" class="form-label">Post</label>
        <textarea class="form-control" name="postText" id="postText" cols="30" rows="5" ></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); -%>